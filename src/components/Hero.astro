---
import Navigation from "./Navigation.astro";
import Knap from "./HeroKnap.astro";
---

<header>
  <div class="logo">
    <a href="#">
      <img src="logo.svg" alt="logo" />
    </a>
  </div>
  <Navigation />
</header>

<!-- <img src="hero_illu.svg" alt="illustration" /> -->
<section>
  <div class="padding">
    <h1>ER DET DIG <br /> VI SØGER?</h1>
    <h3>Bliv <span class="understreget">frivillig rådgiver</span> hos misbrugsportalen,<br /> og gør en forskel for udsatte pårørende.</h3>
    <Knap />
  </div>
  <div>
    <img src="hero_illu.svg" alt="illustration" class="illustration" />
  </div>
</section>

<style>
  section {
    background-color: var(--secondary);
    position: relative;
    padding-bottom: 22rem;
  }
  h3,
  h1 {
    color: var(--primary);
    margin-left: 1.5rem;
    margin-right: 2.5rem;
  }
  h1 {
    padding-top: 6rem;
    margin-bottom: 1rem;
    padding-top: 9rem;
  }
  h3 {
    font-weight: 400;
  }
  .illustration {
    width: 8.6875rem;
    height: 22.875rem;
    flex-shrink: 0;
    aspect-ratio: 139/366;
    position: absolute;
    bottom: -1%;
    left: 30%;
  }

  .understreget {
    text-decoration: underline;
  }
  @media (min-width: 800px) {
    h1 {
      font-size: var(--h1dsize);
    }
    section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding-top: 4rem;
      padding-bottom: 12rem;
    }
    .illustration {
      position: absolute;
      top: -16%;
      left: 59%;
      aspect-ratio: 355/1038;
      width: 22.1875rem;
      height: 64.875rem;
      display: block;
      margin: 0;
      padding: 0;
      transform: scale(0.9);
    }

    .padding {
      padding-left: 3rem;
    }
  }
</style>
